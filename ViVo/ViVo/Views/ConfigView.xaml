<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViVo.Views.ConfigView"
             NavigationPage.HasNavigationBar="false"
             Title="Configurações"
             IconImageSource="config.png">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Sair" BackgroundColor="Red" TextColor="White" HeightRequest="50" VerticalOptions="CenterAndExpand" Margin="20,0" Command="{Binding SairCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>